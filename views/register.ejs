<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1> Add New User</h1>

    <p>New User</p>
    <form method="post">
      <label for="uname"> Username: </label>
      <input type="text" name="uname" id="uname" required> <br>
      <label for="pwd"> Password </label>
      <input type="password" name="pwd" id="pwd" required> <br>

      <label for="email"> Email </label>
      <input type="email" name="email" id="email" required> <br>

      <label for="addr"> Address </label>
      <input type="text" name="addr" id="addr" required> <br>

      <label for="city"> City </label>
      <input type="text" name="city" id="city" required>
      <label for="state"> State </label>
      <input type="text" name="state" id="state" required>
      <label for="zip"> ZIP </label>
      <input type="text" name="zip" id="zip" required> <br>

      User Level:
      <input type="radio" id="admin" name="userlevel" value="admin">
      <label for="html">Admin</label>
      <input type="radio" id="moderator" name="userlevel" value="moderator">
      <label for="css">Moderator</label>
      <input type="radio" id="reporter" name="userlevel" value="reporter">
      <label for="javascript">Reporter</label>
      <input type="radio" id="voter" name="userlevel" value="voter">
      <label for="javascript">Voter</label>
      <!-- CAPTCHA Challenge -->
<div id="captchaChallenge">
  Solve the following: 
  <span id="num1"></span> + <span id="num2"></span> = ?
  <input type="text" id="captchaAnswer" name="captchaAnswer" required>
</div>
<script>
  // Generate two random single-digit numbers
  const num1 = Math.floor(Math.random() * 10);
  const num2 = Math.floor(Math.random() * 10);

  // Display the numbers in the CAPTCHA challenge
  document.getElementById('num1').textContent = num1;
  document.getElementById('num2').textContent = num2;

  // Store the correct answer in a hidden field to send with the form
  const correctAnswer = num1 + num2;
  const hiddenInput = document.createElement('input');
  hiddenInput.type = 'hidden';
  hiddenInput.name = 'correctCaptcha';
  hiddenInput.value = correctAnswer;
  document.getElementById('captchaChallenge').appendChild(hiddenInput);
</script>

      <input type="submit" value="Add User">
      
    </form>
  </body>
</html>